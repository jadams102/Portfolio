@model Portfolio.Models.Comment
@{
    var postId = ViewBag.PostId;
}
@using (Html.BeginForm())
{
<input data-val="true" data-val-required="The PostId field is required." id="PostId" name="PostId" type="hidden" value="@postId">    <div class="form-group">
        @Html.LabelFor(model => model.User)
        @Html.TextBoxFor(model => model.User, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Body)
        @Html.TextAreaFor(model => model.Body, new { @class = "form-control" })
    </div>
    <input type="submit" value="Add Comment" class="btn btn-info" />
}